<html>
<body>
        <%- include('header'); -%>

    <h1>Display product</h1>
    <% if(product_array.length>0) { %>
    <table border='1'>
        <tr>
            
            <th>Product Name</th>
            <th>Product Details</th>
            <th>Product Price</th>
            <th>Product Image</th>
            <th>Product Qty</th>
        </tr>
        <% for(var i=0; i<product_array.length;i++) { %>
        <tr>
            <td><%= i+1 %></td> 
            <td><%= user_array[i].product_name %></td>
            <td><%= user_array[i].product_details %></td>
            <td><%= user_array[i].product_price %></td>
            <td><%= user_array[i].product_Image %></td>
            <td><%= user_array[i].product_Qty %></td>
            
            <td>
                    <a href='/edit/<%= product_array[i]._id %>'>Edit</a> | 
                    <a href='/delete/<%= product_array[i]._id %>'>Delete</a> |
                    <a href='/show/<%= product_array[i]._id %>'>Show</a>
          
          </td>
        </tr>
        <% } %>
    </table>
    <% } else { %>
        No Record Found
      <% } %>
</body>
</html>