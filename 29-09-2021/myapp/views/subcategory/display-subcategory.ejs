<html>
<script>
function ConfirmDelete()
{
  var x = confirm("Are you sure you want to delete?");
  if (x)
      return true;
  else
    return false;
}
</script>
<body>
    <h1>Display Table</h1>
    
    <table border='1'>
        <tr>
            <th>ID</th>
            <th>Subcategory_name</th>
            <th>category_name</th>
            <th>Action</th>
        </tr>

    {{#each subcategory_array}}
        <tr>
            <td>{{_id}}</td>
            <td>{{s_name}}</td>
            <td>{{_category.c_name}}</td>
            <td>
                <a href='/subcategory/edit/{{_id}}'>Edit</a> | 
                <a href='/subcategory/delete/{{_id}}' Onclick="ConfirmDelete()">Delete</a> |
                <a href='/subcategory/show/{{_id}}'>Show</a>
            </td>
        </tr>
    {{/each}}
        </tr>
     
</table>
</body>
</html>
